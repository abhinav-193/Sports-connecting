          <% if(user) { %>
            <div class="logout">
            Hello, <%= user.email %>
            <button class="btn btn-outline-light" onclick="location.assign('/logout')">
              Logout
            </button>
            <% } else { %>
            <button id="login"class="btn btn-outline-light login" onclick="location.assign('/login')"> 
              Login
            </button>
            <% } %>
        </div>
      </div>
    </div>
  </nav>

<body>
        <div class="logincont">
            <div class="loginbox">
                <div class="loginhead">LOGIN</div>
                <div id="sawo-container" style="height: 300px; width: 300px;"></div>
            </div>
        </div>
    <script src="https://websdk.sawolabs.com/sawo.min.js"></script>    
    <script>
    var config = {
        // should be same as the id of the container created on 3rd step
        containerID: "sawo-container",
        // can be one of 'email' or 'phone_number_sms'
        identifierType: "email",
        // Add the API key copied from 2nd step
        apiKey: "<%- sawo_key %>",
        // Add a callback here to handle the payload sent by sdk
        onSuccess: async (payload) => {
            //console.log(payload);
            const user_id = payload.user_id;
            const email = payload.identifier;
            try{
                const res = await fetch('/add-user',{
                  method: 'POST', 
                  body: JSON.stringify({ user_id, email }),
                  headers: {'Content-Type': 'application/json'}
                });
                const data = await res.json();
                //console.log(data);
                if (data.user_id) {
                  location.assign('/');
                }
            }
            catch{

            }
        },
    };
    var sawo = new Sawo(config);
    sawo.showForm();
</script>
</body>
</html>